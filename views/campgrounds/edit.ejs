<% layout('layouts/boilerplate') %>
    <div class="mt-3 mb-3">
        <h1 style="text-align: center;">Edit Campground</h1>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= camp._id %>?_method=PUT " method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="campground[title]" id="title" placeholder="Title" class="form-control" value="<%= camp.title %>" required>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="campground[location]" id="location" placeholder="Location" class="form-control" value="<%= camp.location %>" required>
                </div>
                <div>
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text"> &#8377; </span>
                        <input type="Number" id="price" name="campground[price]" class="form-control" value="<%= camp.price %>" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="campground[description]" id="description" placeholder="add description" class="form-control" required><%= camp.description %></textarea>
                </div>
                <div class="mb-3">
                    <label for="images" class="form-label">Add more images</label>
                    <input class="form-control" type="file" id="images" name="image" multiple>
                </div>
                <button class="btn btn-success col-3 mb-3" style="size: 500px;">SAVE</button>
            </form>
            <footer class="mb-3">
                <a class="fs-5" href="/campgrounds/<%= camp._id %>">Back</a>
            </footer>
        </div>
    </div>